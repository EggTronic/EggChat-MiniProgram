/**index.wxss**/
page {
  height: 100%;
}

.container {
  height: 100%;
  width: 100%;
  background-color: var(--background-primary);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  position: relative;
}

.logo {
  height: 100%;
  display: flex;
  align-items: center;
}

.logo image {
  height: 400rpx;
  width: 400rpx;
}

.welcome {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.welcome-title {
  font-size: large;
  line-height: 24px;
  padding: 10px;
  color: var(--header-primary);
}

.welcome-text {
  font-size: small;
  line-height: 20px;
  color: var(--header-secondary);
}

.authorize {
  margin-bottom: 50rpx;
}